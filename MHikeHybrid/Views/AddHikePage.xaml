<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MHikeHybrid.ViewModels"
             x:Class="MHikeHybrid.Views.AddHikePage"
             x:DataType="vm:AddHikeViewModel"
             Title="{Binding PageTitle}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Hike Name (Required)" />
            <Entry Text="{Binding Name}" Placeholder="e.g., Blue Mountain Trail" />

            <Label Text="Location (Required)" Margin="0,10,0,0" />
            <Entry Text="{Binding Location}" Placeholder="e.g., National Park" />

            <Label Text="Hike Date (Required)" Margin="0,10,0,0" />
            <DatePicker Date="{Binding HikeDate}" />

            <HorizontalStackLayout Spacing="10" Margin="0,10,0,0" VerticalOptions="Center">
                <Label Text="Parking Available?" VerticalOptions="Center" />
                <Switch IsToggled="{Binding ParkingAvailable}" />
            </HorizontalStackLayout>

            <Label Text="Length (Required)" Margin="0,10,0,0" />
            <Entry Text="{Binding Length}" Placeholder="e.g., 10 km" />

            <Label Text="Difficulty (Required)" Margin="0,10,0,0" />
            <Picker Title="Select level" 
                    ItemsSource="{Binding DifficultyOptions}"
                    SelectedItem="{Binding Difficulty}" />

            <Label Text="Description" Margin="0,10,0,0" />
            <Editor Text="{Binding Description}" Placeholder="Description (Optional)" AutoSize="TextChanges" HeightRequest="100" />

            <Label Text="Transport" Margin="0,10,0,0" />
            <Entry Text="{Binding Transport}" Placeholder="e.g., Motorbike" />

            <Label Text="Estimated Time" Margin="0,10,0,0" />
            <Entry Text="{Binding EstTime}" Placeholder="e.g., 4 hours" />

            <Button Text="{Binding SaveButtonText}" 
                    Command="{Binding SaveHikeCommand}"
                    BackgroundColor="Green"
                    TextColor="White"
                    Margin="0,20,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>